---
import { Badge } from "./ui/badge";
import { FaJava } from "react-icons/fa";
import { SiSpring } from "react-icons/si";
import TechBadges from "./TechBadges";

const { t } = Astro.props;

const text = {
  title: t('hero.title'),
  subtitle: t('hero.subtitle'),
  description: t('hero.description')
}

---
<section id={t('nav.home')} class="flex flex-col gap-4 items-center max-w-[1200px] mx-auto py-24">
  <div class="p-8 w-fit flex flex-col md:flex-row items-center gap-12">
    <div class="flex items-center">
      <div class="bg-background size-86 rounded-full border border-primary" />
    </div>
    <div class="flex flex-col items-start gap-2">
      <h1 class="text-4xl lg:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary/80 to-primary to dark:from-primary dark:to-primary/60">{text.title}</h1>
      <p class="text-2xl lg:h-12 lg:text-4xl font-medium bg-clip-text text-transparent bg-gradient-to-r from-foreground/80 to-foreground dark:from-foreground dark:to-foreground/60">{text.subtitle}</p>
      <p class="text-muted-foreground mt-2">{text.description}</p>
    </div>
  </div>
  <div class="w-full px-4 md:px-8">
    <TechBadges client:load/>
  </div>
</section>
